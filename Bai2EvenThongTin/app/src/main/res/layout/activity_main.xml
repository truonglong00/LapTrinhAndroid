 <?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:background="#0095ff"
        android:textSize="30sp"
        android:lineSpacingExtra="1sp"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_height="50dp"
        android:text="Thông tin cá nhân"
        />
    <TextView
        android:id="@+id/text1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_below="@+id/textTitle"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:text="Họ tên"/>


    <EditText
        android:layout_below="@+id/textTitle"
        android:id="@+id/txtHoTen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/text1"
        android:textStyle="italic"
        android:text="Tên phải >=3 kí tự"/>

    <TextView
        android:id="@+id/text2"
        android:gravity="center"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:text="CMND"/>

    <EditText
        android:layout_below="@+id/text1"
        android:id="@+id/txtCmnd"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/txtHoTen"
        android:textStyle="italic"
        android:text="Nhập đúng 9 chữ số"/>

    <TextView
        android:id="@+id/txtbangcap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bằng cấp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/txtCmnd"
        android:background="#1abc9c"
        android:textColor="#ffff"
        android:textSize="20sp"
        android:gravity="center"/>

    <RadioButton
        android:id="@+id/radioButton1"
        android:layout_below="@id/txtbangcap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trung cấp" />
    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_below="@id/txtbangcap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/radioButton1"
        android:text="Cao đẳng" />
    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_below="@id/txtbangcap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/radioButton2"
        android:text="Đại học" />
    <TextView
        android:id="@+id/txtsothich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sở thích"
        android:layout_marginTop="10dp"
        android:layout_below="@id/radioButton3"
        android:textSize="20sp"
        android:background="#1abc9c"
        android:textColor="#ffff"
        android:gravity="center"/>

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_below="@id/txtsothich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc báo" />
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_below="@id/txtsothich"
        android:layout_toRightOf="@id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding" />
    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_below="@id/txtsothich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đọc Coding"
        android:layout_toRightOf="@id/checkBox2"
        />
    <TextView
        android:id="@+id/txtbosung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin bổ sung"
        android:layout_marginTop="10dp"
        android:layout_below="@id/checkBox3"
        android:textSize="20sp"
        android:background="#1abc9c"
        android:textColor="#ffff"
        android:gravity="center"/>
    <EditText
        android:id="@+id/txtnhap"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@id/txtbosung"
        android:gravity="center"
        android:text="Nhập thông tin bổ sung có thể để trống"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtnhap"
        android:layout_marginTop="3dp"
        android:onClick="GuiThongTin"
        android:text="Gửi thông tin" />
    <TextView
        android:id="@+id/txtHienThi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button5"
        android:text=""
        android:textColor="#1abc9c"
        android:textStyle="italic"
        android:textSize="20sp"/>
</RelativeLayout>