<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/texta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CA0"
        android:gravity="center"
        android:onClick="onTest"
        android:layout_margin="10dp"
        android:text="Open new actvity"></TextView>
    
    <TextView
        android:id="@+id/txtc"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:background="#CA56"
        android:layout_below="@+id/texta"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="C"></TextView>

    <EditText
        android:id="@+id/edt_b"
        android:layout_width="100dp"
        android:layout_height="wrap_content"

        android:background="#CAE"
        android:layout_below="@+id/texta"
        android:layout_toLeftOf="@+id/txtc"
        android:layout_marginRight="10dp"
        ></EditText>

    <TextView
        android:id="@+id/txt_d"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Open activity and Get Result"
        android:background="#CAE"
        android:layout_alignTop="@+id/txtc"
        android:layout_marginRight="10dp"
        ></TextView>

</RelativeLayout>