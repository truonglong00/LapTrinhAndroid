<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_listview_test_tvname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student name"
        android:background="@drawable/bg_corner"
        app:layout_constraintTop_toTopOf="parent"></TextView>
    <TextView
        android:id="@+id/item_listview_test_tvbirthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Student birthday"
        android:background="@drawable/bg_corner"
        app:layout_constraintTop_toBottomOf="@+id/item_listview_test_tvname"></TextView>


    <ImageView
        android:id="@+id/item_listview_test_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_listview_test_tvbirthday"
        android:layout_width="100dp"
        android:background="@color/colorAccent"
        android:src="@drawable/bg_corner"
        android:layout_height="100dp"></ImageView>

    <Button
        android:id="@+id/btn_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Click"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        ></Button>

    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_click"
        android:text="Show"
        app:layout_constraintBottom_toBottomOf="parent"></Button>


</androidx.constraintlayout.widget.ConstraintLayout>